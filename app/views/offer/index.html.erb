<% title "Elige el establecimiento:" %>

<h1> <font color="#ff6e00">Elige uno de tus establecimientos:</font></h1>

<div id="venue_list">

	<table class="table table-hover table-condensed">
	<thead>
	  <tr>
	    <!-- <th>#</th> -->

	    <th><%= t(:Establecimiento, scope: :'myinfo.headers') -%> <i class="icon-map-marker"></i></th>
	    <th><%= t(:oferta_activa, scope: :'myinfo.headers') -%> <i class="icon-gift"></i></th>
	    <th></th>
	  </tr>
	</thead>
	<tbody>
	
	<% @venues.each do |venue| -%>
	  <tr>
	    <td><%= venue.venue_name %></td>
	    <td> <% if venue.offer_on %>
	    	    <font color="green"> Si </font> 
	    	 <% else -%>
	    	 	<font color="red"> No </font> 
	    	<% end -%>
     	</td>

     	<td colspan=3>
     		<% if !venue.offer_on %>
     			<a href=<%= "offer/"+venue.venue_thnx_id+"/edit" %>> <i class="icon-edit"></i> <i><%= t(:Nueva, scope: :'myinfo.messages') -%></i></a> </td>
     		<% else -%>
	     			<a href=<%= "offer/"+venue.venue_thnx_id+"/myoffers" %>> <i class="icon-zoom-in"></i> <i><%= t(:Ver, scope: :'myinfo.messages') -%></i></a> |
		     		<a href=<%= "offer/"+venue.venue_thnx_id+"/edit" %>> <i class="icon-edit"></i> <i><%= t(:Nueva, scope: :'myinfo.messages') -%></i></a>  |  
		     		<a href=<%= "offer/"+venue.venue_thnx_id+"/delete" %> onclick="return confirm('Seguro que quieres eliminar la oferta?')" > <i class="icon-remove"></i> <i><%= t(:Eliminar, scope: :'myinfo.messages') -%></i> </a>  </td>
     		<% end -%>
	  </tr>	
	<% end -%>
	</tbody>
	</table>

</div>



